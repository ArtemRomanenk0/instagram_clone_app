<<h1>Профиль пользователя: <%= @user.username %></h1>

<% if current_user != @user %>
  <% if current_user.following?(@user) %>
    <%= button_to 'Отписаться', user_subscription_path(@user), method: :delete, class: 'btn btn-danger' %>
  <% else %>
    <%= button_to 'Подписаться', user_subscriptions_path(@user), method: :post, class: 'btn btn-primary' %>
  <% end %>
<% end %>

<%= link_to 'Назад', root_path, class: 'btn btn-secondary' %>

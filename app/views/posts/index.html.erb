<h1>Твои новости</h1>

<% if user_signed_in? %>
  <%= link_to "Выйти", destroy_user_session_path, data: { "turbo-method": :delete }, class: "logout-link" %>
<% end %>

<%= link_to 'Новый пост', new_post_path %>

<%= form_tag(posts_path, method: :get) do %>  
  <%= text_field_tag :search, params[:search], placeholder: "Поиск..." %>  
  <%= submit_tag "Найти" %>  
<% end %>  

<% @posts.each do |post| %> <!-- Только один цикл! -->
  <div class="post">
    <p><%= image_tag post.image.url %></p>
    <p><%= post.text %></p>
    <p>Posted by <%= link_to post.user.username, user_path(post.user) %></p>
  </div>
<% end %>

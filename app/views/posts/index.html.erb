<h1>Your Feed</h1>
<% if user_signed_in? %>
  <%= link_to "Выйти", destroy_user_session_path, data: { "turbo-method": :delete }, class: "logout-link" %>
<% end %>
<%= link_to 'New Post', new_post_path %>
<%= form_with url: search_posts_path, method: :get do |f| %>
  <%= f.text_field :query %>
  <%= f.submit 'Search Posts' %>
<% end %>

<% @posts.each do |post| %>
  <div class="post">
    <p><%= image_tag post.image.url %></p>
    <p><%= post.text %></p>
    <p>Posted by <%= link_to post.user.username, user_path(post.user) %></p>
  </div>

<% end %>



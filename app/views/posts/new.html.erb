<%= form_with(model: @post, local: true) do |form| %>
  <div class="field">
    <%= form.label :text %>
    <%= form.text_area :text %>
  </div>

  <div class="field">
    <%= form.label :image %>
    <%= form.file_field :image %>
  </div>

  <div class="actions">
    <%= form.submit 'Создать пост' %>
  </div>

  <div class="actions">
    <%= link_to 'Назад', root_path, class: 'btn btn-secondary' %>
  </div>
<% end %>
